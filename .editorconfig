# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# all files
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
max_line_length = 0

[examples/doc.{adoc,md,tf,txt};examples/footer.md]
insert_final_newline = false

[*.{yaml,yml}]
indent_size = 2

[*.{tf,tfvars}]
indent_size = 2
indent_style = space
